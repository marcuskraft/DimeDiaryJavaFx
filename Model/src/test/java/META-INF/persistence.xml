<persistence xmlns="http://java.sun.com/xml/ns/persistence" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
 version="2.0">
 
  <persistence-unit name="PersistenceHSQLDB" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    
    <class>com.dimediary.model.entities.User</class>
    <class>com.dimediary.model.entities.Transaction</class>
    <class>com.dimediary.model.entities.Category</class>
    <class>com.dimediary.model.entities.BankAccount</class>
    <class>com.dimediary.model.entities.BankAccountCategory</class>
    <class>com.dimediary.model.entities.BalanceHistory</class>
    
    
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:..\DB\DimeDiary"/>
      <property name="javax.persistence.jdbc.user" value=""/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
  
</persistence>