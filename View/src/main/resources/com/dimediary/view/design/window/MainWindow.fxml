<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane prefHeight="771.0" prefWidth="1109.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dimediary.view.window.main.MainWindow">
   <top>
      <MenuBar prefHeight="0.0" prefWidth="1293.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Datei">
            <items>
              <MenuItem fx:id="menuClose" mnemonicParsing="false" onAction="#onMenuClose" text="Beenden" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Bearbeiten">
               <items>
                  <MenuItem fx:id="menuCategory" mnemonicParsing="false" onAction="#onMenuCategory" text="Kategorien bearbeiten" />
                  <MenuItem fx:id="menuAccount" mnemonicParsing="false" onAction="#onMenuAccount" text="Konten bearbeiten" />
                  <MenuItem fx:id="menuAccCategory" mnemonicParsing="false" onAction="#onMenuAccCategory" text="Konto-Kategorien bearbeiten" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Hilfe">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane fx:id="tabPane" prefHeight="648.0" prefWidth="888.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="overviewTab" text="Überblick" />
            <Tab fx:id="diagramTab" text="Diagramme">
               <content>
                  <BorderPane fx:id="borderPaneDiagramm" prefHeight="200.0" prefWidth="200.0">
                     <top>
                        <Pane prefHeight="88.0" prefWidth="1109.0" BorderPane.alignment="CENTER">
                           <children>
                              <Label layoutX="14.0" layoutY="14.0" text="Konto" />
                              <ComboBox fx:id="comboBoxAccountDiagramm" layoutX="66.0" layoutY="10.0" onAction="#onComboBoxAccountDiagramm" prefHeight="25.0" prefWidth="117.0" />
                              <Label layoutX="212.0" layoutY="14.0" text="von" />
                              <DatePicker fx:id="dateFromSpinner" layoutX="232.0" layoutY="10.0" onAction="#onDateFromSpinner" />
                              <Label layoutX="415.0" layoutY="14.0" text="bis" />
                              <DatePicker fx:id="dateUntilSpinner" layoutX="433.0" layoutY="10.0" onAction="#onDateUntilSpinner" />
                              <Button fx:id="monthbackButton" layoutX="212.0" layoutY="44.0" mnemonicParsing="false" onAction="#onMonthbackButton" text="Monat zurück" />
                              <Button fx:id="monthforwardButton" layoutX="309.0" layoutY="44.0" mnemonicParsing="false" onAction="#onMonthforwardButton" text="Monat vor" />
                           </children>
                        </Pane>
                     </top>
                  </BorderPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
